#include "stdafx.h"
#include  <iostream>
#include  "conio.h"

using namespace std;

//Declarar el prototipo de la funcion
int factorial (int n);

void main(){
	int N;
	cout<<"Ingrese el valor de N" ;
	cin>> N;
	cout<<"El factorial del numero N es: " <<factorial(N);
	getch();

}

//Declarar la funcion
int factorial (int n )
{

	int prod=1; //Declarador de producto
	for(int i=1;i<=n;i++)
		prod=prod*i;
	return prod;
}
