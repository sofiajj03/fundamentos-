#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;

void main () {

   int edad,estado,sueldo;
   cout<<"Ingresar la edad" ;
   cin>> edad;
   if (edad>=18)
   {
	   cout<<"Puede votar"; 
       cout<<"Cuanto es su sueldo"<<endl;
	   cin>> sueldo;
	   cout<<"El 10 porcientos es: "<<sueldo*0.10<< endl;
   }
   else
	   if (edad>=14)
	   {
		   cout<<"Esta casado? Ingresar 1 por si y 0 por no" << endl;
		   cin>> estado;
		   if (estado==1)
			   cout<<"Puede votar" ;
		   else 
			   cout<<"no puede votar si esta soltero";
	   }
	   else
		   cout<<"No puede votar"<<endl;
  getch();



}
