#include "stdafx.h"
#include "conio.h"
#include <iostream>


using namespace std;
void main()
{
	     float c1,c2,c3,promedio,diferencia,may,men; 
		 cout<<"Ingresar cantidad:";
		 cin>>c1;
		 cout<< "Ingresar cantidad:";
		 cin >>c2;
		 cout<< "Ingresar cantidad:";
		 cin >>c3;
		 may=c1;
		 men=c1;
		 if (may<c2)
			 may=c2;
		 if (men>c2)
			 men=c2;
		 if (may<c3)
			 may=c3;
		 if (men>c3)
			 men=c3;

		 diferencia=may-men;
		 promedio=(c1+c2+c3)/3;
		 cout<<"La diferencia del mayor con el menor es: " <<diferencia<<endl;
		 cout<<"El promedio es: " <<promedio;

		 getch();
}
