#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "Math.h"
using namespace std;

void main()
{
   float a, b,r; 
   int opcion;
   do {
     cout << endl;
     cout << "1.- arearectangulo" << endl;
     cout << "2.- perimetrorectangulo" << endl;
     cout << "3.- diagonalrectangulo" << endl;
     cout << "0.- Salir" << endl;
     cout << "Elige una opciÃ³n: " ;
	  cin >> opcion;
     cout << "Ingrese a: " ;
	 cin >> a;
	 cout << "Ingrese b: " ;
	 cin >> b;
     switch (opcion) {
	 case 1: 
			
	        r = a*b; 
			break;
	    case 2: r = 2*a+2*b; break;
	    case 3: r = sqrt(pow(a,2)+pow(b,2)); break;
		case 0: cout << "Salir";break;
	    default: cout << "Opcion invalida" << endl;
     }
     if ((opcion>=1)&&(opcion<=4)) 
     	cout << "El resultado es " << r << endl;
   } while (opcion != 0);
   getch();
}
