#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"

using namespace std;


void main ()

{
	//Declarar variable
	float a,b,c,s,area;
	cout<<"Ingresar lado 1 :";
	cin>> a;
	cout<<"Ingresar lado 2 :";
	cin>> b;
	cout<<"Ingresar lado 3 :";
	cin>> c;

    s=(a+b+c)/2;
	area=sqrt(s*(s-a)*(s-b)*(s-c));
	cout<< "El area es : " <<area;


	getch ();
}
